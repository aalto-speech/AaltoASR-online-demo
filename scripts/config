[demo_eng_5k_finglish]
description=Finglish 5k

lm=%(dir)s/aurora_3gram.bin
lm_la=%(dir)s/aurora_2gram.bin
lex=%(dir)s/wsj_20k_cmu_0.7a_tri.lex
hmm=%(dir)s/wsj0dsp_ml_gain2500_occ200_26.1.2011_28/wsj0dsp_ml_gain2500_occ200_26.1.2011_28"

decoder_args = --binlm %(lm)s --lookahead %(lm_la)s --lexicon %(lex)s --ph %(hmm)s.ph --dur %(hmm)s.dur --lm-scale 40 --token-limit 25000 --beam 220

;Note that the decoder and decoder args are added automatically to the recognizer command
recognizer_args = -b %(hmm)s -C %(hmm)s.gcl --eval-ming 0.15

beam=220
lmscale=40

